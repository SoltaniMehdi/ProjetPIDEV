{% extends 'base.html.twig' %}

{% block title %}Statistiques des livraisons par adresse{% endblock %}

{% block body %}
    <h1>Statistiques des livraisons par adresse</h1>

    <!-- Graphique Pie Chart -->
    <canvas id="myPieChart" width="30" height="30"></canvas>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('myPieChart').getContext('2d');
        var myPieChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: {{ dataForChart.labels|json_encode|raw }},
                datasets: [{
                    label: 'Nombre de livraisons par adresse',
                    data: {{ dataForChart.data|json_encode|raw }},
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                legend: {
                    position: 'right',
                },
            }
        });
    </script>
{% endblock %}
