{% extends 'basefront.html.twig' %}

{% block body %}
    <h1>Repas index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idr</th>
                <th>Prix</th>
                <th>Nom</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for Repas in repas %}
            <tr>
                <td>{{ repa.idr }}</td>
                <td>{{ repa.prix }}</td>
                <td>{{ repa.nom }}</td>
                <td>{{ repa.description }}</td>
                <td>
                    <a href="{{ path('app_repas_show', {'idr': repa.idr}) }}">show</a>
