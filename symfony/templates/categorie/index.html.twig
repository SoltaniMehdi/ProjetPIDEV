{% extends 'baseback.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
    <h1>Categorie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idcateg</th>
                <th>Categevent</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.idcateg }}</td>
                <td>{{ categorie.categevent }}</td>
                <td>
                    <a href="{{ path('app_evenement_new', {'idcateg': categorie.idcateg}) }}">
                        <button class="btn btn-primary">create event</button>

                    </a>
                    <a href="{{ path('app_categorie_show', {'idcateg': categorie.idcateg}) }}">
                        <button class="btn btn-secondary"> show</button>
                        </a>
                    <a href="{{ path('app_categorie_edit', {'idcateg': categorie.idcateg}) }}">
                        <button class="btn btn-success"> edit</button>

                    </a>
                    <form method="POST" action="{{ path('delete_categorie', {'id': categorie.idcateg}) }}" onsubmit="return confirm('Are you sure you want to delete this category?');">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_categorie_new') }}">Create new</a>
{% endblock %}
