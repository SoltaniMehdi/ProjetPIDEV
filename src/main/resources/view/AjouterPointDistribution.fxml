<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AddPController">
    <children>
        <!-- Titre "Ajouter Point de Distribution" avec une Ã©criture en gras et couleur verte menthe -->
        <Label layoutX="178.0" layoutY="14.0" text="Ajouter Point de Distribution" textFill="#98FF98"> <!-- Couleur verte menthe -->
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <!-- Champ "Nom" -->
        <Label fx:id="ft_nom" layoutX="50.0" layoutY="130.0" text="Nom :" textFill="#98FF98"> <!-- Couleur verte menthe -->
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <TextField fx:id="nomTextField" layoutX="100.0" layoutY="125.0" promptText="Entrez le nom" />

        <!-- Champ "Adresse" -->
        <Label fx:id="ft_adresse" layoutX="50.0" layoutY="180.0" text="Adresse :" textFill="#98FF98"> <!-- Couleur verte menthe -->
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <TextField fx:id="adresseTextField" layoutX="130.0" layoutY="175.0" promptText="Entrez l'adresse" />

        <!-- Bouton "Ajouter" -->
        <Button layoutX="186.0" layoutY="280.0" mnemonicParsing="false" onAction="#handleAjouterButton" text="Ajouter">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Button>
      <Button layoutX="332.0" layoutY="288.0" mnemonicParsing="false" onAction="#afficher" text="afficher">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
      <Button fx:id="back" layoutX="476.0" layoutY="288.0" mnemonicParsing="false" onAction="#handleAnnulerButton" text="retour">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
    </children>
</AnchorPane>
